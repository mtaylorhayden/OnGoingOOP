<Window x:Name="window" x:Class="ZooScenario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ZooScenario"
        mc:Ignorable="d"
        Title="Object-Oriented Programming 2: Zoo" Height="350.8" Width="549.6" WindowStartupLocation="CenterScreen" Loaded="window_Loaded" Closing="window_Closing">
    <Grid Margin="10,0,3.4,-20.2">
        <Grid.RowDefinitions>
            <RowDefinition Height="323*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="407*"/>
            <ColumnDefinition Width="78*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="admitGuestButton" Content="Admit Guest" HorizontalAlignment="Left" Height="20" Margin="1,43,0,0" VerticalAlignment="Top" Width="92" Click="admitGuestButton_Click"/>
        <Button x:Name="feedAnimalButton" Content="Feed Animal" HorizontalAlignment="Left" Margin="1,80,0,0" VerticalAlignment="Top" Width="92" Click="feedAnimalButton_Click" Height="19"/>
        <Border x:Name="temperatureBorder" BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Right" Height="100" Margin="0,0,-0.4,1.2" VerticalAlignment="Bottom" Width="20" Background="Red" Grid.Column="1"/>
        <RepeatButton x:Name="increaseTemperature" Content="+" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="23" Margin="0,0,31.6,41.2" Height="23" Click="increaseTemperature_Click" Grid.Column="1"/>
        <RepeatButton x:Name="decreaseTemperature" Content="-" HorizontalAlignment="Right" Margin="0,0,31.6,13.2" VerticalAlignment="Bottom" Width="23" Height="23" RenderTransformOrigin="-1.165,-1.174" Click="decreaseTemperature_Click" Grid.Column="1"/>
        <Label x:Name="temperatureLabel" Content="Temp" HorizontalAlignment="Right" Margin="0,0,24.6,71.2" VerticalAlignment="Bottom" Grid.Column="1" Height="26" Width="38"/>
        <ListBox x:Name="animalListBox" HorizontalAlignment="Left" Height="130" Margin="108,43,0,0" VerticalAlignment="Top" Width="169" MouseDoubleClick="animalListBox_MouseDoubleClick"/>
        <Label Content="Animals" HorizontalAlignment="Left" Margin="157,18,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.082,0.453" Height="26" Width="51"/>
        <ListBox x:Name="guestListBox" HorizontalAlignment="Left" Height="130" Margin="329,43,0,0" VerticalAlignment="Top" Width="176" MouseDoubleClick="guestListBox_MouseDoubleClick" Grid.ColumnSpan="2"/>
        <Label Content="Guests" HorizontalAlignment="Left" Margin="380,17,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.647,0.758" Height="26" Width="45"/>
        <Button x:Name="removeAnimalButton" Content="Remove Animal" HorizontalAlignment="Left" Margin="147,253,0,0" VerticalAlignment="Top" Width="99" Click="removeAnimalButton_Click" Height="19"/>
        <Button x:Name="removeGuestButton" Content="Remove Guest" HorizontalAlignment="Left" Margin="329,222,0,0" VerticalAlignment="Top" Width="94" RenderTransformOrigin="-0.031,0.611" Click="removeGuestButton_Click" Height="19"/>
        <ComboBox x:Name="animalTypeComboBox" HorizontalAlignment="Left" Margin="146,189,0,0" VerticalAlignment="Top" Width="100" Height="22"/>
        <Button x:Name="addAnimalButton" Content="Add Animal" HorizontalAlignment="Left" Margin="147,219,0,0" VerticalAlignment="Top" Width="99" Click="addAnimalButton_Click" Height="19"/>
        <Button x:Name="addGuestButton" Content="Add Guest" HorizontalAlignment="Left" Margin="329,190,0,0" VerticalAlignment="Top" Width="96" Click="addGuestButton_Click" Height="19"/>
        <Button Content="Show Cage" x:Name="showCageButton" HorizontalAlignment="Left" Height="20" Margin="329,253,0,0" VerticalAlignment="Top" Width="94" Click="showCageButton_Click"/>
        <Button x:Name="adoptAnimalButton" Content="Adopt Animal" HorizontalAlignment="Left" Margin="1,115,0,0" VerticalAlignment="Top" Width="92" Click="adoptAnimalButton_Click" Height="19"/>
        <Button x:Name="unadpotAnimalButton" Content="Unadpot Animal" HorizontalAlignment="Left" Margin="0,153,0,0" VerticalAlignment="Top" Width="93" Click="unadpotAnimalButton_Click" Height="19"/>
        <ComboBox x:Name="changeBehaviorComboBox" HorizontalAlignment="Left" Height="20" Margin="329,282,0,0" VerticalAlignment="Top" Width="99"/>
        <Button x:Name="changeBehaviorButton" Content="Change Behavior" HorizontalAlignment="Left" Height="20" Margin="147,282,0,0" VerticalAlignment="Top" Width="100" Click="changeBehaviorButton_Click"/>
        <Button x:Name="birthAnimalButton" Content="Birth Animal" HorizontalAlignment="Left" Margin="1,190,0,0" VerticalAlignment="Top" Width="92" Height="21" Click="birthAnimalButton_Click"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="1,219,0,0" VerticalAlignment="Top" Width="94" Click="saveButton_Click" Height="19"/>
        <Button x:Name="loadButton" Content="Load" HorizontalAlignment="Left" Margin="1,252,0,0" VerticalAlignment="Top" Width="94" Click="loadButton_Click" Height="19"/>
        <Button x:Name="restartButton" Content="Restart" HorizontalAlignment="Left" Margin="0,282,0,0" VerticalAlignment="Top" Width="92" Click="restartButton_Click"/>

    </Grid>
</Window>
