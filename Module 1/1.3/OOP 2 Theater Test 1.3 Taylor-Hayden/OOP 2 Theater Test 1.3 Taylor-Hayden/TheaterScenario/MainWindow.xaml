<Window x:Class="TheaterScenario.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Object-Oriented Programming 2: Theater" Height="350" Width="450" Loaded="Window_Loaded_1">
    <Grid>
        <ListBox x:Name="movieListBox" HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="201"/>
        <Button x:Name="addMovieButton" Content="Add movie" HorizontalAlignment="Left" Margin="136,165,0,0" VerticalAlignment="Top" Width="75" Height="23" Click="addMovieButton_Click"/>
        <ListBox x:Name="guestListBox" HorizontalAlignment="Left" Height="150" Margin="216,10,0,0" VerticalAlignment="Top" Width="200"/>
        <Button x:Name="addGuestButton" Content="Add guest" HorizontalAlignment="Left" Margin="341,165,0,0" VerticalAlignment="Top" Width="75" Click="addGuestButton_Click" Height="23"/>
    </Grid>
</Window>
